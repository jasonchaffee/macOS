#!/usr/bin/env zsh

BASE_DIR=$( cd $( dirname ${(%):-%x} ) &> /dev/null && pwd )
source ${BASE_DIR}/../lib/backup

# Backup before removing
backup_file "${HOME}/.gitignore"

echo "Uninstalling .gitignore"
rm -f ${HOME}/.gitignore

# Note: Not removing git config as it contains user-specific settings
# To fully reset git config, run: rm ~/.gitconfig
