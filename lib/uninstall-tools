#!/usr/bin/env zsh

# Usage: uninstall-tools <type> [--reverse] [failure_log]
# Uninstalls all tools of the given type from tools.conf

BASE_DIR=$( cd $( dirname ${(%):-%x} ) &> /dev/null && pwd )
type=$1

# Parse optional args
if [[ "$2" == "--reverse" ]]; then
    reverse=true
    failure_log=$3
else
    reverse=false
    failure_log=$2
fi

# Get tool entries, optionally reversed
if [[ "$reverse" == "true" ]]; then
    entries=$(grep "^${type}:" ${BASE_DIR}/../tools.conf | tail -r)
else
    entries=$(grep "^${type}:" ${BASE_DIR}/../tools.conf)
fi

echo "$entries" | while read entry; do
    [[ -z "$entry" ]] && continue
    ${BASE_DIR}/uninstall-tool "$entry" </dev/null
    if [[ $? -ne 0 ]]; then
        clean=${entry%%#*}
        clean=${clean%% *}
        pkg=${clean#*:}
        echo "  ${type}: $pkg" >> $failure_log
    fi
done
